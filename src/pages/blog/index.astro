---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { getTagColor } from "../../lib/tag-colors";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const allTags = [...new Set(posts.flatMap((post) => post.data.tags))].sort();
---

<Layout title="Blog — Emirhan">
  <main class="min-h-screen bg-black text-white font-mono">
    <div class="max-w-xl mx-auto px-6 py-20">
      <a href="/" class="text-sm text-gray-500 hover:text-gray-300 transition-colors">
        ← home
      </a>
      <h1 class="text-3xl font-bold mt-6 mb-8">Blog</h1>
      <div class="flex flex-wrap gap-2 mb-12 -ml-2.5">
        {allTags.map((tag) => (
          <a
            href={`/blog/tag/${tag}`}
            class:list={["text-xs px-2.5 py-1 rounded-full transition-colors", getTagColor(tag)]}
          >
            #{tag}
          </a>
        ))}
      </div>
      <ul class="flex flex-col gap-4">
        {posts.map((post) => (
          <li>
            <a
              href={`/blog/post/${post.id}`}
              class="flex justify-between items-baseline gap-4 text-white hover:text-gray-400 transition-colors"
            >
              <span class="text-base">{post.data.title}</span>
              <span class="text-sm text-gray-500 shrink-0">
                {post.data.date.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                  day: "numeric",
                })}
              </span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </main>
</Layout>
